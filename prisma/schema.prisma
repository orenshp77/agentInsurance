generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AGENT
  CLIENT
}

enum Category {
  INSURANCE
  FINANCE
  CAR
}

enum ErrorLevel {
  INFO
  WARNING
  ERROR
  CRITICAL
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  password         String
  role             Role     @default(CLIENT)
  name             String
  phone            String?
  idNumber         String?  @unique
  logoUrl          String?  @db.Text // Agent logo URL (GCS URL)
  profileCompleted Boolean  @default(false) // Has user completed profile setup
  formerAgentName  String?  // Name of deleted agent (for orphaned clients)

  // Agent relationship - clients belong to agents
  agentId   String?
  agent     User?    @relation("AgentClients", fields: [agentId], references: [id])
  clients   User[]   @relation("AgentClients")

  // User's folders
  folders   Folder[]

  // User's notifications
  notifications Notification[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([agentId])
  @@index([role])
}

model Notification {
  id          String   @id @default(cuid())
  title       String
  description String
  type        String   // FILE_UPLOAD, FOLDER_CREATED, etc.
  isRead      Boolean  @default(false)
  forRole     Role     @default(CLIENT) // Which role level should see this notification

  // Notification belongs to a user
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([isRead])
  @@index([forRole])
}

model Folder {
  id        String   @id @default(cuid())
  name      String
  category  Category

  // Folder belongs to a user
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Files in this folder
  files     File[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([category])
}

model File {
  id        String   @id @default(cuid())
  url       String   @db.Text // GCS URL
  fileType  String   // PDF, PNG, JPG
  fileName  String
  notes     String?  // Agent notes

  // File belongs to a folder
  folderId  String
  folder    Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([folderId])
}

model Log {
  id         String     @id @default(cuid())
  message    String
  errorLevel ErrorLevel @default(INFO)
  aiFix      String?    @db.Text // AI_Solution field for automatic bug fixes
  metadata   String?    @db.Text // Additional context data (JSON string)

  createdAt  DateTime   @default(now())

  @@index([errorLevel])
  @@index([createdAt])
}

enum ActivityType {
  USER_REGISTERED
  USER_UPDATED
  USER_DELETED
  FILE_UPLOADED
  FILE_DELETED
  FOLDER_CREATED
  FOLDER_DELETED
  LOGIN
  LOGOUT
}

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  description String

  // Who performed the action
  userId      String?
  userName    String?
  userRole    String?

  // Target of the action (if applicable)
  targetId    String?
  targetName  String?
  targetType  String?      // USER, FILE, FOLDER

  // Additional metadata (JSON string)
  metadata    String?      @db.Text

  createdAt   DateTime     @default(now())

  @@index([type])
  @@index([userId])
  @@index([createdAt])
}
